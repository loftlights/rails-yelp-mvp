<h1>Restaurants#new</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>

<!-- #.container -->
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <%= simple_form_for [@restaurant] do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category, collection: Restaurant::CATEGORY %>
          <%= f.submit "add new restaurant", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


